# One-Search MCP Server Configuration

# ============================================
# Search Provider Configuration
# ============================================

# Search provider to use (default: local)
# Options: local, searxng, tavily, duckduckgo, bing, google, exa, zhipu, bocha
SEARCH_PROVIDER=local

# API URL for search providers (required for searxng, google)
# SEARCH_API_URL=http://localhost:8080

# API Key for search providers (required for tavily, bing, google, exa, zhipu, bocha)
# SEARCH_API_KEY=your-api-key-here

# ============================================
# Search Parameters (Defaults)
# ============================================

# Maximum number of search results (default: 10)
LIMIT=10

# Search categories (default: general)
# Options: general, news, images, videos, it, science, map, music, files, social_media
CATEGORIES=general

# Search engines to use (default: all)
# For local provider: bing,google,baidu,sogou
# For other providers: depends on the provider
ENGINES=all

# Language for search results (default: auto)
# Examples: en, zh, ja, auto
LANGUAGE=auto

# Time range for search results (default: empty/all)
# Options: day, week, month, year
TIME_RANGE=

# Safe search level (default: 0)
# 0 = off, 1 = moderate, 2 = strict
SAFE_SEARCH=0

# Custom User-Agent for requests
# SEARCH_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36

# ============================================
# Browser Configuration
# ============================================

# Run browser in headless mode (default: true)
HEADLESS=true

# ============================================
# Scrape Settings
# ============================================

# Extract only main content (removes navigation, footers, etc.)
SCRAPE_ONLY_MAIN_CONTENT=true

# Maximum content length in characters (default: 0 = unlimited)
# Recommended values:
#   - Light usage (summaries): 5000-10000
#   - Standard usage (balanced): 20000-50000  ‚≠ê Recommended
#   - Detailed analysis: 50000-100000
#   - Full content: 0
SCRAPE_MAX_LENGTH=50000

# ============================================
# Server Settings
# ============================================

# API server port (default: 8000)
API_PORT=8000

# Request timeout in milliseconds (default: 10000)
TIMEOUT=10000

# Session timeout in minutes for HTTP mode (default: 10)
SESSION_TIMEOUT_MINUTES=10

# ============================================
# Legacy Search Provider Settings
# ============================================

# SearXNG Settings (use SEARCH_API_URL and SEARCH_PROVIDER=searxng instead)
# SEARXNG_BASE_URL=http://localhost:8080

# Search Engine API Keys (use SEARCH_API_KEY and appropriate SEARCH_PROVIDER instead)
# TAVILY_API_KEY=your_tavily_api_key
# EXA_API_KEY=your_exa_api_key
# BING_API_KEY=your_bing_api_key
# GOOGLE_API_KEY=your_google_api_key
# ZHIPU_API_KEY=your_zhipu_api_key
